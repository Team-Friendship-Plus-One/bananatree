<div class="container-fluid">
<div class="row boxTwo">
  <p id="notice"><%= notice %></p>
  <h1 class="page-title">Current Campaigns</h1>
  <div class="campaign-info">
      <% @campaigns.each do |campaign| %>
      <h3><%= link_to campaign.title, campaign %></h3>
      <p class="text-muted">Deadline: <%= campaign.deadline_date.strftime("%m/%d/%Y")  %></p>
      <div class="goal">
        Campaign Goal: <%= number_to_currency(campaign.goal) %>
      </div>
      <div class="current">
        Current Total: <%= number_to_currency(campaign.current_total) %>
      </div>
      </div>
      </div>
      <div class="row">

      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70"
        aria-valuemin="0" aria-valuemax="100" style="width:<%= (campaign.current_total / campaign.goal).to_f * 100 %>%"><%= ((campaign.current_total / campaign.goal).to_f * 100).round(2) %>% Funded!
      </div>
    </div>
    <div class="donate">
      <button type="button" class="btn-donate" data-toggle="modal" data-target="#donate-modal">Donate Now!</button>
      <div id="donate-modal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-content">
          <div id="<%= campaign.id %>" class="campaignId">
            <%= render 'campaigns/paymentForm', :campaign => campaign %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= link_to 'New Campaign', new_campaign_path %>
