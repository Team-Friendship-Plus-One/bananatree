
<div id="card-form" class="paymentForm">
  <%= form_tag({controller: 'campaigns', action: 'pay'}, method: :post, id: 'simplify-payment-form') do %>
    <div class="form-group">
        <%= text_field_tag('donation-amount', nil, maxlength: 20, autocomplete: 'off', autofocus: true, placeholder: '$100', class: "form-control input-lg") %>
         <%= label_tag('donation-amount', ' Donation Amount (in USD)', class: "fa fa-dollar") %>
    </div>
    <div class="form-group">
        <%= text_field_tag('cc-number', nil, maxlength: 20, autocomplete: 'off', autofocus: true, placeholder: '5555555555554444', class: "form-control input-lg") %>
        <%= label_tag('cc-number', ' Credit Card Number', class: "fa fa-credit-card") %>
    </div>
    <div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6">
        <div class="form-group">
          <%= text_field_tag('cc-cvc', nil, maxlength: 4, autocomplete: 'off', placeholder: '123', class: "form-control input-lg") %>
          <%= label_tag('cc-cvc', 'CVC', class: "fa") %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-6 col-md-6">
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <select id="cc-exp-month" name="date[month]" class="form-control input-lg">
                  <option selected="selected">MM</option>
                  <option value="1">01</option>
                  <option value="2">02</option>
                  <option value="3">03</option>
                  <option value="4">04</option>
                  <option value="5">05</option>
                  <option value="6">06</option>
                  <option value="7">07</option>
                  <option value="8">08</option>
                  <option value="9">09</option>
                  <option value="10">10</option>
                  <option value="11">11</option>
                  <option value="12">12</option>
                </select>
                <%= label_tag('cc-exp-month', 'MM', class: "fa") %>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <select id="cc-exp-year" name="date[year]" class="form-control input-lg">
                  <option selected="selected">YR
                  <option value="2015">2015</option>
                  <option value="2016">2016</option>
                  <option value="2017">2017</option>
                  <option value="2018">2018</option>
                  <option value="2019">2019</option>
                  <option value="2020">2020</option>
                  <option value="2021">2021</option>
                  <option value="2022">2022</option>
                  <option value="2023">2023</option>
                  <option value="2024">2024</option>
                  <option value="2025">2025</option>
                </select>
                <%= label_tag('cc-exp-month', ' YEAR', class: "fa") %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%= hidden_field :campaignId, :id, :value => campaign.id %>

    <div id="submit-box">
      <%= submit_tag('Process Payment', id: 'process-payment-btn', class: "btn-large") %>
    </div>
    <div id="buy-with-masterpass-div"></div>
  <% end %>
</div>