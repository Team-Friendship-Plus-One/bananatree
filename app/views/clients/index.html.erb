<p id="notice"><%= notice %></p>

<h1>Listing Clients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Bio</th>
      <th>Location</th>
      <th>Special notes</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Picture</th>
      <th>Goals</th>
      <th>Campaign</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.bio %></td>
        <td><%= client.location %></td>
        <td><%= client.special_notes %></td>
        <td><%= client.age %></td>
        <td><%= client.gender %></td>
        <td><%= client.picture %></td>
        <td><%= client.goals %></td>
        <td><%= client.campaign_id %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

