
  <div class="loginPage">
    <h2 class="page-title">Log in</h2>
    <div class="loginForm">
      <% twitter = image_tag("https://g.twimg.com/dev/sites/default/files/images_documentation/sign-in-with-twitter-gray.png", :alt => "twitter", :class => "twitter") %>

      <%= link_to twitter, user_omniauth_authorize_path(:twitter) %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control input-lg'  %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg' %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-large" %>
        </div>
      <% end %>
      <div class="linkto">
        <%= link_to "Not a user yet? Sign up!", new_registration_path(resource_name) %>
      </div>
    </div>
  </div>
